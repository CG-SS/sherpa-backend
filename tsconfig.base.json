{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sherpa-backend/domain/events": ["libs/domain/events/src/index.ts"],
      "@sherpa-backend/kafka": ["libs/kafka/src/index.ts"],
      "@sherpa-backend/logger": ["libs/logger/src/index.ts"],
      "@sherpa-backend/prisma": ["libs/prisma/src/index.ts"],
      "@sherpa-backend/services/file-uploader-shared": [
        "libs/services/file-uploader-shared/src/index.ts"
      ],
      "@sherpa-backend/services/rest": ["libs/services/rest/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
